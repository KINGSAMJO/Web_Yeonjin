<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/hyj"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="400dp"/>

    <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : 황연진"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/my_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이 : 23"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/my_name"
        app:layout_constraintStart_toStartOf="@id/image"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/my_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mbti : ESFJ"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/my_age"
        app:layout_constraintStart_toStartOf="@id/image"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/my_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거주지 : 인천"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/my_mbti"
        app:layout_constraintStart_toStartOf="@id/image"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/my_address"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/introduce"
            android:textSize="20dp"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>