<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.soptseminar1">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.SeminarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoptSeminar1"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.profile.logout.LogoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.onboarding.OnBoardingActivity"
            android:exported="false"/>
        <activity
            android:name=".presentation.profile.follower.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.signup.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.signin.SignInActivity"
            android:exported="false" />
    </application>

</manifest>